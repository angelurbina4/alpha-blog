<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category , class: "shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
    <div class="col-10 mt-1">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>


  <div class="form-group row justify-content-md-center">
    <div class="col-2 mt-3">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
  </div>
<% end %>